#!/usr/bin/env php
<?php

declare(strict_types=1);

use Phauthentic\BcCheck\Command\CheckCommand;
use Symfony\Component\Console\Application;

// Find autoloader
$autoloadPaths = [
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php',
];

$autoloader = null;
foreach ($autoloadPaths as $path) {
    if (file_exists($path)) {
        $autoloader = $path;
        break;
    }
}

if ($autoloader === null) {
    fwrite(STDERR, "Could not find autoloader. Please run 'composer install'.\n");
    exit(1);
}

require $autoloader;

$application = new Application('BC Check', '1.0.0');
$application->add(new CheckCommand());
$application->setDefaultCommand('check', true);
$application->run();
